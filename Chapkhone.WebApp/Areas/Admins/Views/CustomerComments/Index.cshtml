@model ICollection<GetCustomerCommentVM>

<div class="container my-5 pt-2">
    <h5 class="fw-bold my-4">مدیریت نظرات مشتریان</h5>
    <div class="row mb-4">
        <div class="col-9 d-flex align-items-center">
            <span class="d-block text-start fw-bold">لیست نظرات تایید نشده</span>
        </div>
    </div>
    <table class="table table-hover table-striped table-responsive-md align-middle">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">متن نظر</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Count > 0)
                {
                    int index = 1;
                    foreach (var customerComment in Model)
                    {
                        <tr>
                            <th scope="row">@index</th>
                            <td>@customerComment.CommentText</td>
                            <td class="text-end">
                                <div class="dropdown">
                                    <a class="btn btn-primary btn-sm dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false"></a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item" asp-area="Admins" asp-controller="CustomerComments" asp-action="Details" asp-route-id="@customerComment.Id">جزئیات</a></li>
                                        <li><a class="dropdown-item" asp-area="Admins" asp-controller="CustomerComments" asp-action="GivePermission" asp-route-id="@customerComment.Id">اجازه نمایش دارد</a></li>
                                        <li><a class="dropdown-item text-danger" asp-area="Admins" asp-controller="CustomerComments" asp-action="Delete" asp-route-id="@customerComment.Id">حذف نظر</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td class="fw-bold text-primary text-center" colspan="3">هیچ نظری یافت نشد.</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>